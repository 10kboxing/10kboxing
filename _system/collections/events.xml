<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="options">
            <field name="date" type="datetime" label="Date" filter="date" class="form-control" admintable="true" />
            <field name="location" type="text" label="Location" filter="string"  class="form-control" />
            <field name="address" type="text" label="Address" filter="string"  class="form-control" />
            <field name="postcode" type="text" label="Postcode" filter="string"  class="form-control" />
            <field name="city" type="text" label="City" filter="string"  class="form-control" />
            <field name="image" type="media" label="Image" filter="string" class="form-control" />
        </fieldset>
        <fieldset name="tickets">
            <field name="tickets" type="multiform" label="Tickets" filter="array" default="[{'ticket': 'Standard Ticket'}, {'ticket': 'VIP Ticket'}, {'ticket': 'Ringside Ticket'}]">
                <field name="name" type="text" label="Ticket Name" filter="string" class="form-control" />
                <field name="price" type="text" label="Ticket Price" filter="float" class="form-control" />
            </field>
        </fieldset>
    </fields>
</form>
