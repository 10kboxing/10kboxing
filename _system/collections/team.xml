<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="options">
            <field name="image" type="media" label="Header Image" filter="string" class="form-control" />
        </fieldset>
        <fieldset name="profile">
            <field name="nationality" type="text" label="Nationality" filter="string" class="form-control" />
            <field name="birthday" type="date" label="Birthday" filter="string" class="form-control" />
            <field name="hometown" type="text" label="Hometown" filter="string" class="form-control" />
            <field name="coach" type="text" label="Coach" filter="string" class="form-control" />
            <field name="inspiration" type="text" label="Inspiration" filter="string" class="form-control" />
            <field name="avatar" type="media" label="Profile Picture" filter="string" class="form-control" />
            <field name="height" type="text" label="Height" filter="int" class="form-control" />
            <field name="wins" type="text" label="Wins" filter="int" class="form-control" />
            <field name="losses" type="text" label="Losses" filter="int" class="form-control" />
            <field name="draws" type="text" label="Draws" filter="int" class="form-control" />
        </fieldset>
    </fields>
</form>