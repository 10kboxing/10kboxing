<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="options">
            <field name="wins" type="number" label="Wins" filter="int" class="form-control" default="0" />
            <field name="kos" type="number" label="Wins by KO" filter="int" class="form-control" default="0" />
            <field name="losses" type="number" label="Losses" filter="int" class="form-control" default="0" />
            <field name="draws" type="number" label="Draws" filter="int" class="form-control" default="0" />
        </fieldset>
        <fieldset name="profile">
            <field name="image" type="media" label="Header Image" filter="string" class="form-control" />
            <field name="avatar" type="media" label="Profile Picture" filter="string" class="form-control" />
            <field name="nationality" type="text" label="Nationality" filter="string" class="form-control" />
            <field name="birthday" type="date" label="Birthday" filter="string" class="form-control" />
            <field name="hometown" type="text" label="Hometown" filter="string" class="form-control" />
            <field name="coach" type="text" label="Coach" filter="string" class="form-control" />
            <field name="inspiration" type="text" label="Inspiration" filter="string" class="form-control" />
            <field name="height" type="text" label="Height" filter="int" class="form-control" />
            <field name="stance" type="text" label="Stance" filter="string" class="form-control" />
        </fieldset>
        <fieldset name="social">
            <field name="facebook" label="Facebook" type="text" filter="string" class="form-control" />
            <field name="twitter" label="Twitter" type="text" filter="string" class="form-control" />
            <field name="instagram" label="Instagram" type="text" filter="string" class="form-control" />
            <field name="youtube" label="Youtube" type="text" filter="string" class="form-control" />
        </fieldset>
    </fields>
</form>